<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E0F7FA"
    android:padding="16dp"
    android:layout_margin="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Member Name :  "
        android:textColor="#000"
        android:textSize="16sp"
        android:id="@+id/tv_membername"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_membername">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile No. :  "
        android:textColor="#000"
        android:textSize="16sp"
        android:layout_below="@id/tv_membername"
        android:id="@+id/tv_mobilenumber"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_mobilenumber"
        android:id="@+id/tv_shownumber"
        android:layout_below="@id/tv_membername">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Member Role :  "
        android:textColor="#000"
        android:id="@+id/tv_memberrole"
        android:layout_below="@+id/tv_mobilenumber"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_memberrole"
        android:id="@+id/tv_showrole"
        android:layout_below="@id/tv_mobilenumber">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subscription Amt. :  "
        android:textColor="#000"
        android:textSize="16sp"
        android:layout_below="@id/tv_memberrole"
        android:id="@+id/tv_subscriptionamount"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_showsubscription"
        android:layout_toRightOf="@id/tv_subscriptionamount"
        android:layout_below="@id/tv_memberrole">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@id/tv_subscriptionamount"
        android:layout_marginTop="16dp">

        <!-- Loan Amount Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/rounded_background"
            android:layout_marginEnd="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loan Amount"
                android:textColor="#000"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/loanAmountValue"
                android:textColor="#000"
                android:textSize="14sp"
                android:gravity="center" />
        </LinearLayout>

        <!-- Deposit Amount Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/rounded_background"
            android:layout_marginStart="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deposit Amount"
                android:textColor="#000"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/depositAmountValue"
                android:textColor="#000"
                android:textSize="14sp"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
